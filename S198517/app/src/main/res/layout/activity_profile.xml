<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackgrey"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"/>


        <Button
            android:id="@+id/createInvitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="-80dp"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_background_signup"
            android:textColor="@color/white"
            android:text="@string/addInvitation"
            android:onClick="addInvitation"/>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/yourInvitations"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/blackgrey"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arrowdown"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </ListView>

</LinearLayout>